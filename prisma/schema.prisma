generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  fullName    String
  cpf         String  @unique
  email       String  @unique
  password    String
  annotations Diary[]

  @@map("users")
}

model Diary {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Mission {
  id        Int      @id @default(autoincrement())
  day       Int
  title     String
  task      String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tarot {
  id        Int      @id @default(autoincrement())
  cardName  String
  meaning   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchase {
  id        Int      @id @default(autoincrement())
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  id             Int      @id @default(autoincrement())
  card           String
  title          String
  subtitle       String
  affirmation    String
  suggestedMusic String
  img            String
  blend          String
  power          String
  incense        String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
